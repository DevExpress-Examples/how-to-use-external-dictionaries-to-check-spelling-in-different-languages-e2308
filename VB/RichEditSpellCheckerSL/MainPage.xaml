        <Button x:Name="Open" Grid.Row="0" Grid.Column="0" Width="150" Content="Open / Άνοιγμα" Background="Yellow" Foreground="Blue" Click="Open_Click" />
        <dxre:RichEditControl Grid.Row="1" Grid.ColumnSpan="2" x:Name="richEdit1" />
    </Grid>
</UserControl>
